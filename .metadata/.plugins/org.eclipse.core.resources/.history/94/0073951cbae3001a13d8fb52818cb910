	@GET
	@Path("/demo")
	public String contextDemo(@HeaderParam("header") String header) throws  Exception{
		if(header == null) {
			throw new WebApplicationException("The value of custom header not found", 404);
		}
		return "The value of custom header value is : " + header;
	}
